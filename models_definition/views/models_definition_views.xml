                <field name="facu_nomb"/>
                <field name="facu_dire"/>
                <field name="facu_emai"/>
                <field name="facu_url"/>
                <field name="facu_obse"/>
                <field name="facu_logo"/>
                <field name="facu_sigl"/>
                <field name="facu_nume"/>
            </group>
        </field>
    </record>

